{
  "name": "comment-craft",
  "displayName": "Comment Craft",
  "description": "Craft beautiful and professional code comments with intelligent highlighting, generation, formatting, templates, statistics, validation, and comprehensive tag management. Supports 150+ languages with advanced features like search, reminders, and integrations.",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.108.0"
  },
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "categories": [
    "Other",
    "Documentation",
    "Formatters"
  ],
  "keywords": [
    "comment",
    "documentation",
    "code",
    "annotation",
    "docs"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commentCraft.generateComment",
        "title": "Comment Craft: Generate Comment",
        "category": "Comment Craft"
      },
      {
        "command": "commentCraft.formatComments",
        "title": "Comment Craft: Format Comments",
        "category": "Comment Craft"
      },
      {
        "command": "commentCraft.jumpToNextTag",
        "title": "Jump to Next Tag",
        "category": "Comment Craft",
        "icon": "$(arrow-down)"
      },
      {
        "command": "commentCraft.jumpToPreviousTag",
        "title": "Jump to Previous Tag",
        "category": "Comment Craft",
        "icon": "$(arrow-up)"
      },
      {
        "command": "commentCraft.listTagsInFile",
        "title": "List Tags in Current File",
        "category": "Comment Craft"
      },
      {
        "command": "commentCraft.toggleTagVisibility",
        "title": "Toggle Tag Visibility",
        "category": "Comment Craft"
      },
      {
        "command": "commentCraft.markAsDone",
        "title": "Mark Tag as Done",
        "category": "Comment Craft"
      },
      {
        "command": "commentCraft.exportTags",
        "title": "Export Tags",
        "category": "Comment Craft"
      },
      {
        "command": "commentCraft.scanWorkspace",
        "title": "Scan Workspace for Tags",
        "category": "Comment Craft"
      },
      {
        "command": "commentCraft.refreshTreeView",
        "title": "Refresh Tag Tree",
        "category": "Comment Craft",
        "icon": "$(refresh)"
      },
      {
        "command": "commentCraft.insertTemplate",
        "title": "Insert Comment Template",
        "category": "Comment Craft",
        "icon": "$(file-code)"
      },
      {
        "command": "commentCraft.showStatistics",
        "title": "Show Comment Statistics",
        "category": "Comment Craft",
        "icon": "$(graph)"
      },
      {
        "command": "commentCraft.searchComments",
        "title": "Search Comments",
        "category": "Comment Craft",
        "icon": "$(search)"
      },
      {
        "command": "commentCraft.advancedSearch",
        "title": "Advanced Comment Search",
        "category": "Comment Craft"
      },
      {
        "command": "commentCraft.validateComments",
        "title": "Validate Comments in File",
        "category": "Comment Craft",
        "icon": "$(check)"
      },
      {
        "command": "commentCraft.validateWorkspace",
        "title": "Validate Comments in Workspace",
        "category": "Comment Craft"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "commentCraft.tagTree",
          "name": "Comment Tags",
          "when": "commentCraft.enableTreeView == true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "commentCraft",
          "title": "Comment Craft",
          "icon": "images/icon.png"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "commentCraft.generateComment",
          "when": "editorHasSelection",
          "group": "commentCraft"
        },
        {
          "command": "commentCraft.formatComments",
          "when": "editorTextFocus",
          "group": "commentCraft"
        },
        {
          "command": "commentCraft.markAsDone",
          "when": "editorTextFocus",
          "group": "commentCraft"
        }
      ],
      "view/title": [
        {
          "command": "commentCraft.refreshTreeView",
          "when": "view == commentCraft.tagTree",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "commentCraft.jumpToNextTag",
          "when": "view == commentCraft.tagTree",
          "group": "inline"
        }
      ]
    },
      "commandPalette": [
        {
          "command": "commentCraft.generateComment",
          "title": "Comment Craft: Generate Comment"
        },
        {
          "command": "commentCraft.formatComments",
          "title": "Comment Craft: Format Comments"
        }
      ]
    },
    "keybindings": [
      {
        "command": "commentCraft.generateComment",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c",
        "when": "editorHasSelection"
      },
      {
        "command": "commentCraft.jumpToNextTag",
        "key": "ctrl+alt+n",
        "mac": "cmd+alt+n",
        "when": "editorTextFocus"
      },
      {
        "command": "commentCraft.jumpToPreviousTag",
        "key": "ctrl+alt+p",
        "mac": "cmd+alt+p",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Comment Craft",
      "properties": {
        "commentCraft.style": {
          "type": "string",
          "default": "standard",
          "enum": [
            "standard",
            "javadoc",
            "jsdoc",
            "doxygen"
          ],
          "enumDescriptions": [
            "Standard single-line or multi-line comments",
            "JavaDoc style comments",
            "JSDoc style comments",
            "Doxygen style comments"
          ],
          "description": "Comment style to use when generating comments"
        },
        "commentCraft.autoFormat": {
          "type": "boolean",
          "default": true,
          "description": "Automatically format comments after generation"
        },
        "commentCraft.multilineComments": {
          "type": "boolean",
          "description": "Whether the multiline comment highlighter should be active",
          "default": true
        },
        "commentCraft.highlightPlainText": {
          "type": "boolean",
          "description": "Whether the plaintext comment highlighter should be active",
          "default": false
        },
        "commentCraft.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable Comment Craft features"
        },
        "commentCraft.tags": {
          "type": "array",
          "description": "Tags which are used to color the comments. Changes require a restart of VS Code to take effect",
          "default": [
            {
              "tag": "TODO",
              "pattern": "\\bTODO\\b[:\\s]?",
              "color": "#d19a66",
              "strikethrough": false,
              "underline": false,
              "backgroundColor": "transparent",
              "bold": true,
              "italic": false
            },
            {
              "tag": "FIXME",
              "pattern": "\\bFIXME\\b[:\\s]?",
              "color": "#e06c75",
              "strikethrough": false,
              "underline": false,
              "backgroundColor": "#2a1f1f",
              "bold": false,
              "italic": false
            },
            {
              "tag": "BUG",
              "pattern": "\\bBUG\\b[:\\s]?",
              "color": "#e06c75",
              "strikethrough": false,
              "underline": false,
              "backgroundColor": "#2a1f1f",
              "bold": true,
              "italic": false
            },
            {
              "tag": "NOTE",
              "pattern": "\\bNOTE\\b[:\\s]?",
              "color": "#3498DB",
              "strikethrough": false,
              "underline": false,
              "backgroundColor": "transparent",
              "bold": false,
              "italic": false
            },
            {
              "tag": "HACK",
              "pattern": "\\bHACK\\b[:\\s]?",
              "color": "#f39c12",
              "strikethrough": false,
              "underline": false,
              "backgroundColor": "transparent",
              "bold": false,
              "italic": true
            },
            {
              "tag": "OPTIMIZE",
              "pattern": "\\bOPTIMIZE\\b[:\\s]?",
              "color": "#9b59b6",
              "strikethrough": false,
              "underline": false,
              "backgroundColor": "transparent",
              "bold": false,
              "italic": false
            },
            {
              "tag": "URGENT",
              "pattern": "\\bURGENT\\b[:\\s]?",
              "color": "#ffffff",
              "strikethrough": false,
              "underline": false,
              "backgroundColor": "#d9534f",
              "bold": true,
              "italic": false
            },
            {
              "tag": "REVIEW",
              "pattern": "\\bREVIEW\\b[:\\s]?",
              "color": "#3498DB",
              "strikethrough": false,
              "underline": false,
              "backgroundColor": "transparent",
              "bold": false,
              "italic": false
            },
            {
              "tag": "DEPRECATED",
              "pattern": "\\bDEPRECATED\\b[:\\s]?",
              "color": "#95a5a6",
              "strikethrough": true,
              "underline": false,
              "backgroundColor": "transparent",
              "bold": false,
              "italic": false
            },
            {
              "tag": "DONE",
              "pattern": "\\bDONE\\b[:\\s]?",
              "color": "#98C379",
              "strikethrough": false,
              "underline": false,
              "backgroundColor": "transparent",
              "bold": false,
              "italic": false
            },
            {
              "tag": "COMPLETE",
              "pattern": "\\bCOMPLETE\\b[:\\s]?",
              "color": "#98C379",
              "strikethrough": false,
              "underline": false,
              "backgroundColor": "transparent",
              "bold": false,
              "italic": false
            }
          ]
        },
        "commentCraft.matchOnlyInComments": {
          "type": "boolean",
          "default": true,
          "description": "Only match tags inside comment blocks"
        },
        "commentCraft.scanWorkspaceOnOpen": {
          "type": "boolean",
          "default": false,
          "description": "Scan entire workspace for tags on open (disabled by default for privacy)"
        },
        "commentCraft.showInStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show tag counts in status bar"
        },
        "commentCraft.enableTreeView": {
          "type": "boolean",
          "default": true,
          "description": "Enable tree view sidebar for tag navigation"
        },
        "commentCraft.showGutterMarkers": {
          "type": "boolean",
          "default": true,
          "description": "Show colored markers in gutter and overview ruler"
        },
        "commentCraft.showOverviewRuler": {
          "type": "boolean",
          "default": true,
          "description": "Show markers in overview ruler"
        },
        "commentCraft.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Enable CodeLens actions above tags"
        },
        "commentCraft.enableHighContrast": {
          "type": "boolean",
          "default": false,
          "description": "Use high-contrast colors for accessibility"
        },
        "commentCraft.telemetry": {
          "type": "boolean",
          "default": false,
          "description": "Enable telemetry (opt-in only)"
        },
        "commentCraft.savedFilters": {
          "type": "array",
          "default": [],
          "description": "Saved filter presets for tag filtering"
        },
        "commentCraft.githubIntegration": {
          "type": "boolean",
          "default": false,
          "description": "Enable GitHub issue integration"
        },
        "commentCraft.jiraIntegration": {
          "type": "boolean",
          "default": false,
          "description": "Enable Jira integration"
        },
        "commentCraft.enableReminders": {
          "type": "boolean",
          "default": false,
          "description": "Enable reminders for urgent tags"
        },
        "commentCraft.reminderInterval": {
          "type": "number",
          "default": 60,
          "description": "Reminder check interval in minutes"
        },
        "commentCraft.reminderDaysThreshold": {
          "type": "number",
          "default": 7,
          "description": "Days threshold for TODO reminder"
        }
      }
    },
    "codeLens": {
      "language": "*"
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "json5": "^2.2.1"
  },
  "devDependencies": {
    "@types/json5": "^2.2.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.108.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mdtanvirahamedshanto/comment-craft.git"
  },
  "bugs": {
    "url": "https://github.com/mdtanvirahamedshanto/comment-craft/issues"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/mdtanvirahamedshanto"
  },
  "homepage": "https://github.com/mdtanvirahamedshanto/comment-craft#readme",
  "license": "MIT",
  "publisher": "mdtanvirahamedshanto",
  "author": {
    "name": "Md Tanvir Ahamed Shanto"
  },
  "icon": "images/icon.png"
}
